<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Messenger" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Цвета поверхностей -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Фон -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>

        <!-- Цвета текста -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray_600</item>
        <item name="android:textColorHint">@color/gray_400</item>

        <!-- Статус бар и навигация -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- EditText -->
        <item name="editTextStyle">@style/Widget.App.EditText</item>
    </style>

    <style name="Theme.Messenger" parent="Base.Theme.Messenger" />

    <!-- Стиль для EditText -->
    <style name="Widget.App.EditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHint">?android:textColorHint</item>
    </style>
</resources>