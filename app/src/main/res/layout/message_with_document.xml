<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Индикатор пересылки -->
    <TextView
        android:id="@+id/forwarded_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/ubuntu_light"
        android:text=" Forwarded from Username"
        android:textColor="#808080"
        android:textSize="12sp"
        android:textStyle="italic"
        android:visibility="gone" />

    <androidx.cardview.widget.CardView
        android:id="@+id/message_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:cardBackgroundColor="@color/message_background"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Иконка и инфо о файле -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_document"
                    android:contentDescription="@string/document"
                    app:tint="@color/blue" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/file_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_light"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:maxWidth="200dp"
                        tools:text="document.pdf" />

                    <TextView
                        android:id="@+id/file_size_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_light"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        tools:text="1.2 MB" />

                </LinearLayout>

            </LinearLayout>

            <!-- Текст (если есть) -->
            <TextView
                android:id="@+id/message_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/ubuntu_light"
                android:textColor="?android:textColorPrimary"
                android:textSize="16sp"
                android:visibility="gone"
                tools:text="Описание документа"
                tools:visibility="visible" />

            <!-- Кнопка скачать -->
            <Button
                android:id="@+id/download_btn"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/ubuntu_light"
                android:text="@string/download"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:drawableStart="@drawable/ic_download"
                android:drawablePadding="4dp"
                style="@style/Widget.Material3.Button.TextButton" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Время снизу -->
    <TextView
        android:id="@+id/message_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/ubuntu_light"
        android:textColor="@color/black"
        android:textSize="12sp"
        tools:text="12:34" />

</LinearLayout>