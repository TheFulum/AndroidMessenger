<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Messenger" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryVariant">@color/blue_light</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Цвета поверхностей -->
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Фон -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorOnBackground">@color/white</item>

        <!-- Цвета текста -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_300</item>
        <item name="android:textColorHint">@color/gray_500</item>

        <!-- Статус бар и навигация -->
        <item name="android:statusBarColor">@color/dark_surface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:navigationBarColor">@color/dark_surface</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <!-- EditText -->
        <item name="editTextStyle">@style/Widget.App.EditText</item>
    </style>

    <style name="Theme.Messenger" parent="Base.Theme.Messenger" />
</resources>